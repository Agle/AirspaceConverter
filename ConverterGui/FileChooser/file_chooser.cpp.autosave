#include "file_chooser.h"

filechooser::filechooser(QWidget *parent) :QWidget(parent){
    this->filepath();
    QObject::connect(vib_btn, SIGNAL(clicked()), this, SLOT(FilePath_clicked()));//передача команды активации функции при нажатии на кнопку
}


void filechooser::filepath(){
    left_lt = new QHBoxLayout; //метод расстановки по горизонтали 
    vib_btn = new QPushButton(QObject::tr("..."));//создание клавиши ...
    line = new QLineEdit;//Создание строки
    //Порядок расстановки на форме
    left_lt->addWidget(vib_btn);
    left_lt->addWidget(line);
    this->setLayout(left_lt);//вывод формы
  }
void filechooser::FilePath_clicked(){//Функция открытия файла
    QFileInfo fi(QFileDialog::getOpenFileName(this,tr("Open File"),"",tr("*.dwg;;*.txt;;*.cpp")));
    line->setText(fi.fileName());

}
